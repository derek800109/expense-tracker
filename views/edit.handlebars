<form action="/expenseTrackers/{{ record._id }}?_method=PUT" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-4">* 必填欄位</div>
      <div class="col-4">請修改你的支出</div>
    </div>
    <div class="row mt-2">
      <div class="col-4">名稱*:</div>
      <div class="col-4">
        <input type="text" placeholder="name" name="name" value="{{record.name}}" class="form-control">
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-4">日期*:</div>
      <div class="col-4">
        <input class="form-control" type="date" value="{{record.date}}" name="date">
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-4">類別*:</div>
      <div class="col-4 input-group mb-3">
        <select class="custom-select" name="category">
          {{!-- <option value="{{record.category}}" selected>Select</option> --}}
          {{#each categories}}
          <option value="{{this._id}}" {{#if this.selected}} selected {{/if}}>
            {{this.category}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-4">金額*:</div>
      <div class="col-4">
        <input type="number" placeholder="amount" name="amount" value="{{record.amount}}" class=" form-control">
      </div>
    </div>
    <div class="row mt-2 input-group-append">
      <div class="col-4"></div>
      <button type="submit" class="btn btn-success">送出</button>
    </div>
  </div>
</form>